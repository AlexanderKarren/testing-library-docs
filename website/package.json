{
  "name": "react-testing-library-docs",
  "author": "Alex Krolick",
  "license": "MIT",
  "private": true,
  "scripts": {
    "examples": "docusaurus-examples",
    "start": "docusaurus-start",
    "build": "docusaurus-build",
    "write-translations": "docusaurus-write-translations",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version",
    "lint-docs": "textlint ../docs/**/*.md",
    "format-docs": "prettier --write '../docs/**/*.md'"
  },
  "devDependencies": {
    "@textlint-rule/textlint-rule-no-unmatched-pair": "^1.0.7",
    "docusaurus": "^1.7.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "textlint": "^11.3.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-en-capitalization": "^2.0.2",
    "textlint-rule-stop-words": "^1.0.17",
    "textlint-rule-write-good": "^1.6.2"
  },
  "lint-staged": {
    "linters": {
      "*.js": ["prettier --write", "git add"],
      "../docs/**/*.md": ["prettier --write --parser=markdown", "git add"],
      "*.md": ["prettier --write --parser=markdown", "git add"],
      "*.json": ["prettier --write --parser=json", "git add"]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
